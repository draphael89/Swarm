{
  "name": "swarm",
  "private": true,
  "packageManager": "pnpm@10.8.0",
  "type": "module",
  "workspaces": [
    "apps/backend",
    "apps/ui"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --names backend,ui \"pnpm --filter @swarm/backend dev\" \"pnpm --filter @swarm/ui dev\"",
    "dev:backend": "pnpm --filter @swarm/backend dev",
    "dev:ui": "pnpm --filter @swarm/ui dev",
    "build": "pnpm --filter @swarm/backend build && pnpm --filter @swarm/ui build",
    "prod": "VITE_SWARM_WS_URL=ws://127.0.0.1:47287 pnpm build && pnpm prod:start",
    "prod:start": "concurrently --kill-others-on-fail --names backend,ui \"SWARM_PORT=47287 SWARM_DATA_DIR=data-prod pnpm --filter @swarm/backend start\" \"pnpm --filter @swarm/ui preview -- --port 47289 --strictPort\"",
    "test": "pnpm --filter @swarm/backend test && pnpm --filter @swarm/ui test"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
